{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext", "es2018.promise"],
    "module": "es2015",
    "baseUrl": "./",
    "paths": {
      "shared/*": ["src/app/shared/*"],
      "namespaces/*": ["src/app/content/namespaces/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*", "node_modules/ng2-ace-editor/src/**/*"]
}
